<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Raspored">
        <activity
            android:name=".RasporedActivity"
            android:exported="false"
            android:label="@string/title_activity_raspored"
            android:theme="@style/Theme.Raspored" />
        <activity
            android:name=".DebuggingActivity"
            android:exported="false"
            android:label="@string/title_activity_debuging"
            android:theme="@style/Theme.Raspored" />
        <activity
            android:name=".SettingActivity"
            android:exported="false"
            android:label="@string/title_activity_setting"
            android:theme="@style/Theme.Raspored" />
        <activity
            android:name=".Todo"
            android:exported="false"
            android:label="@string/title_activity_todo"
            android:theme="@style/Theme.Raspored" />
        <activity
            android:name=".Dev"
            android:exported="false"
            android:label="@string/title_activity_dev"
            android:theme="@style/Theme.Raspored" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Raspored">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".RasporedWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/raspored_widget_info" />
        </receiver>
    </application>

</manifest>